<style>
    body{
        padding:0;
        margin:0;
        font-family:"微软雅黑";
        /*background-color: #ffffff;*/

    }

    header{
        width:100%;
        height:200px;
        text-align:center;
        position: relative;
        background-color: #ffffff;

    }

    #logo{
        background-image: url("<%= asset_path "logo.png" %>");
        width:630px;
        height:120px;
        background-position:left;
        background-size: contain;
        background-repeat: no-repeat;
        text-align: right;
        padding-top:20px;
        display:inline-block;
        vertical-align: top;
    }

    #logo .social{
        display: inline-block;
        height:25px;
    }

    #logo .social img{
        width:inherit;
        height:inherit;
    }

    #logo .social:before{
        content: "";
        display:inline-block;
        height:25px;
        width:2px;
        background-color:#009966;
        vertical-align:top;
    }

    #searchArea{
        display:inline-block;
        width:400px;
        padding-top:25px;
        text-align:right;
    }

    #searchArea #search_text{
        border:solid 2px #777777;
        border-radius: 2px;
        height:25px;
        width:200px;
        padding-left:5px;
        padding-right:5px;
        background-color:#FCFCFC;
        display:inline-block;
    }

    #searchArea #search_text:hover{
        background-color:#FFFFCC;
        box-shadow:2px 2px 4px #333333;
    }

    #searchArea #search_submit{
        width:70px;
        height:35px;
        display:inline-block;
        border:solid 1px #009966;
        background-color:#009933;
        font-weight:bold;
        color:#FFFFFF;
        border-radius:2px;
    }

    #searchArea #search_submit:hover{
        box-shadow:2px 2px 4px #009966;
        color:#FFFFCC;
        cursor: hand;
    }

    nav{
        display:block;
        position: absolute;
        bottom: 0;
        width:100%;
        height:50px;
        text-align:center;
    }

    nav a{
        text-decoration: none;
        color:#333333;
        border-bottom:solid 0 #444444;
        transition:ease .4s;
        padding-bottom:5px;
    }

    nav a:hover{
        color:#222222;
        border-bottom:solid 7px #444444;
    }

    nav>ul{
        height:inherit;
        display:inline-block;
        position: relative;
    }

    nav>ul>.item{
        list-style: none;
        display:inline-block;
        font-weight:bold;
        font-size:24px;
        margin-right:20px;
    }

    nav>ul>.item:before{
        content:"";
        display:inline-block;
        width:2px;
        height:40px;
        background-color:#AAAAAA;
        vertical-align: middle;
        margin-right:20px;
    }

    nav>ul>.item:first-child:before{
        background-color:#FFFFFF;
    }

    nav ul .droplist ul{
        display:block;
        position:absolute;
        background-color:#009933;
        left:0;
        margin-top:4px;
        height:40px;
        text-align:left;
        width:0;
        padding:0;
        transition:ease .4s;
    }

    nav ul .droplist:hover ul{
        display:block;
        width:100%;
        padding-left:20px;
    }

    nav ul .droplist ul li{
        display:none;
        list-style:none;
        font-size:16px;
        font-weight:normal;
        color:#FFFFFF;
    }

    nav ul .droplist:hover ul li{
        display:inline-block;
    }
</style>