      <div class="panel panel-default">
        <div class="panel-body">
      <%= yield %>
          </div>
        </div>
    </div>
    <div class="col-xs-12 col-md-3" id="sidecontent">
      <%=
          render "layouts/newsidecontent"
      %>
    </div>
  </div>
</div>
<!-- End of Body-->

