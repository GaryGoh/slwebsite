<!-- The html head declaration-->
<%= render "layouts/head"%>

<style>
    #maincontent {
        /*border-right-style: solid;*/
        /*border-right-color: #eee;*/
        /*border-width: 0.06cm;*/
        padding-left: 120px;
        margin-right: 0;
        margin-top: 20px;

    }

    #sidecontent {
        max-width: 250px;
        overflow: auto;
        margin-left: 10px;
        margin-top: 20px;
        /*padding-right: 10px;*/
