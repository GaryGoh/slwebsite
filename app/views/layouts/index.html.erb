<style>
    #maincontent {
        border-right-style: solid;
        border-right-color: #eee;
        border-width: 0.06cm;
        padding-left: 120px;
        margin-right: 0;

    }

    #sidecontent {
        padding-right: 120px;
    }

    #indexheader {
        padding-bottom: 20px;
    }
</style>

<!-- The html head declaration-->
<%= render "layouts/head" %>

<!-- Begin Navbar -->
<div id="indexheader">
  <%= render "layouts/header3" %>
</div>


<!-- Begin Body -->
<div class="container-fluid">
  <div class="no-gutter row">
    <!-- left side column -->
    <%=
        #render "layouts/navbar"
    %>

    <!--/end left column-->
    <div class="col-xs-12 col-md-9" id="maincontent">
      <%= yield %>
    </div>
    <div class="col-xs-12 col-md-3" id="sidecontent">
      <%=
          render "layouts/side_content"
      %>
    </div>
  </div>
</div>
<!-- End of Begin-->

<footer>
  <%= render 'layouts/footer2' %>

</footer>
<%= render "layouts/foot" %>

