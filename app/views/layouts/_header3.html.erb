<link rel="stylesheet" type="text/css" href="css/AnimatedHeader/component.css"/>
<script src="js/AnimatedHeader/js/modernizr.custom.js"></script>


<div class="cbp-af-header">
  <div class="navbar navbar-static navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href=<%= root_url %>><b>社团联合会</b></a>
        <a class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="glyphicon glyphicon-chevron-down"></span>
        </a>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li><a href=<%= notis_url %>>活动通知</a></li>
          <li><a href="/download">资料下载</a></li>
          <li><a href="/faq">FAQ</a></li>
          <li class="dropdown" id="headDrop">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="navfade">社团中心</a>
            <ul class="dropdown-menu" id="hul">
              <li><a href="/gy">公益实践中心</a></li>
              <li><a href="/wy">文娱兴趣中心</a></li>
              <li><a href="ty">体育竞技中心</a></li>
              <li><a href="xs">学术科技中心</a></li>
            </ul>

          </li>
        </ul>

        <ul class="nav pull-right navbar-nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-search"></i></a>
            <ul class="dropdown-menu" style="padding:12px;">
              <form class="form-inline">
                <button type="submit" class="btn btn-default pull-right"><i class="glyphicon glyphicon-search"></i>
                </button>
                <input type="text" class="form-control pull-left" placeholder="Search">
              </form>
            </ul>
          </li>
          <li class="dropdown" id="headDrop2">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-user"></i>
              <i class="glyphicon glyphicon-chevron-down"></i></a>
            <ul class="dropdown-menu" id="hul2">
              <% if current_user_stu %>
                  <li><%= link_to current_user_stu.email, user_url(session[:user_id]) %></li>
                  <li class="divider"></li>
                  <li><%= link_to raw('发布新闻'), new_user_issue_path(current_user_stu, @issue) %></li>
                  <li><%= link_to raw('发布活动通知'), new_user_noti_path(current_user_stu, @noti) %></li>
                  <li class="divider"></li>
                  <li><%= link_to '登出', signout_path, method: "delete" %></li>
              <% else %>
                  <li><%= link_to "注册", signup_url %></li>
                  <li><%= link_to "登录", signin_url %></li>
              <% end %>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>



<script src="js/AnimatedHeader/js/classie.js"></script>
<script src="js/AnimatedHeader/js/cbpAnimatedHeader.min.js"></script>

<script type="text/javascript">

    $(function () {
        $("#headDrop").hover(
                function () {
                    $("#hul").slideToggle(300);
                },
                function () {
                    $("#hul").slideUp(400)
                }
        )

        $("#headDrop2").hover(
                function () {
                    $("#hul2").slideToggle(300);
                },
                function () {
                    $("#hul2").slideUp(400)
                }
        )
    })

</script>