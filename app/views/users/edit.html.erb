<% if (session[:user_id] == @user.id) || @user.id == nil %>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">个人资料</h3>
      </div>
      <div class="panel-body">
        <%= render 'form' %>

      </div>

    </div>
    <td><%= link_to raw('<button type="button" class="btn btn-primary">查看</button>'), @user %></td>

    <td><%= link_to raw('<button type="button" class="btn btn-primary">返回</button>'), root_url %></td>

<% else %>
