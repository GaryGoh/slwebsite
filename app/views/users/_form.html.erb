<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <% @user.errors.messages.values.each do |msg| %>
              <% msg.each do |m| %>
                  <li class="alert alert-warning"><%= m %></li>
              <% end %>
          <% end %>
          </ul>
        </div>
    <% end %>

    <div class="container">
        <div class="control-group">
          <label class="control-label" for="server_name">学号</label>

          <div class="controls">
            <%= f.text_field :stuid, readonly: true, :class => "form-control" %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label">Email</label>

          <div class="controls">
            <%= f.text_field :email, readonly: true, :class => "form-control" %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="Name">姓名</label>

          <div class="controls">
            <%= f.text_field :name, id: "Name", placeholder: "Name", :class => "form-control" %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="Contact">联系方式</label>

          <div class="controls">
            <%= f.text_field :contact, id: "Contact", placeholder: "Contact", :class => "form-control" %>
          </div>
        </div>

        <div class="control-group">
          <label class="control-label" for="Gender">性别</label>

          <div class="controls">
            <%= f.select :gender_id, Gender.find(:all, :order => "gender_name DESC").collect { |s|
              [(s.gender_name), s.id] }, {}, { :class => "selectpicker", :nameui => "huge"} %>
          </div>
        </div>


        <!--<div class="control-group">-->
        <!--<label class="control-label" for="Department">部门</label>-->
        <!--<div class="controls">-->
        <%=
            #@user.user_societies :id, Society.find(:all).collect { |s|
            #[(s.society_name), s.id] }
        %>
        <!--</div>-->
        <!--</div>-->

      <div class="form-group">
        <label class="control-label" for="Department">头像</label>

        <div class="fileinput fileinput-new" data-provides="fileinput">
          <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
            <img data-src="holder.js/100%x100%" alt="...">
          </div>
          <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"></div>
          <div>
      <span class="btn btn-primary btn-embossed btn-file">
        <span class="fileinput-new"><span class="fui-image"></span>  Select image</span>
        <span class="fileinput-exists"><span class="fui-gear"></span>  Change</span>
        <%= f.file_field :avatar %>
      </span>
            <a href="#" class="btn btn-primary btn-embossed fileinput-exists" data-dismiss="fileinput"><span class="fui-trash"></span>  Remove</a>
          </div>
        </div>
      </div>



        <div class="control-group">
          <label class="control-label" for="Proverb">个人签名</label>

          <div class="controls">
            <%= f.text_field :proverb, :rows => "6", :class => "form-control tagsinput tagsinput-primary", :id => "inputProverb", :placeholder => "个人简介" %>
          </div>
        </div>

        </br>
        <!--<div class="actions">-->
        <%= f.submit class: 'btn btn-primary btn-lg', :value => "提交" %>
        <!--</div>-->
    </div>

<% end %>



<script>
    // Select dropdown
    $("select[nameui='huge']").selectpicker({style: 'btn btn-primary', menuStyle: 'dropdown-inverse'});
    $("select[nameui='large']").selectpicker({style: 'btn-lg btn-default'});
    $("select[nameui='info']").selectpicker({style: 'btn-info'});
    $("select[nameui='small']").selectpicker({style: 'btn-sm btn-warning'});
    $(".tagsinput").tagsInput({});
</script>

