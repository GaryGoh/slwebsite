<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">

      <%= f.label :stuid %>
      <br>
      <%= @user.stuid %>
    </div>


    <div class="field">
      <%= f.label :email %>
      <br>
      <%= @user.email %>
    </div>

    <div class="field">
      <%= f.label :name %>
      <br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :gender %>
      <br>
      <%= f.select :gender, [['男', '男'], ['女', '女'], ['其他', '其他']] %>
    </div>
    <div class="field">
      <%= f.label :contact %>
      <br>
      <%= f.text_field :contact %>
    </div>
    <div class="field">
      <%= f.label :department %>
      <br>
      <%= f.text_field :department %>
    </div>
    <div class="field">
      <%= f.label :proverb %>
      <br>
      <%= f.text_area :proverb %>
    </div>
    <div class="field">
      <%= f.label :admin %>
      <br>
      <%= f.check_box :admin %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
