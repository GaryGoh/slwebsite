<% if (current_user.admin) %>

    <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading"><h3>用户列表</h3>
        <span class="label label-info"><%= link_to '添加用户', new_user_path, :id => "new_user_in_users" %></span>
      </div>
      <div class="panel-body">


        <!-- Table -->
        <table class="table">
          <thead>
          <tr>
            <th>学号</th>
            <th>姓名</th>
            <th>性别</th>
            <th>联系方式</th>
            <th>部门</th>
            <th>管理员</th>
            <th>新闻数</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
          </thead>

          <tbody>
          <% @users.each do |user| %>
              <tr>

                <td><%= user.stuid %></td>
                <td><%= user.name %></td>
                <td><%= user.gender %></td>
                <td><%= user.contact %></td>
                <td><%= user.department %></td>
                <td><%= user.admin %></td>
                <td><%= user.issues.count %></td>
                <td><%= link_to '详细', user %></td>
                <td><%= link_to '修改', edit_user_path(user) %></td>
                <td><%= link_to '发布新闻', user_issues_path(user) %></td>
                <% unless user.admin? %>
                    <td><%= link_to '删除', user, method: :delete, data: {confirm: 'Are you sure?'} %></td>
                <% end %>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>




<% else %>
    <%= render 'static_page/access_error' %>
<% end %>
