<h1>Listing users</h1>

<table>
  <thead>
    <tr>

      <th>Username</th>
      <th>Name</th>
      <th>Gender</th>
      <th>Contact</th>
      <th>Department</th>
      <th>count</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>

        <td><%= user.username %></td>
        <td><%= user.name %></td>
        <td><%= user.gender %></td>
        <td><%= user.contact %></td>
        <td><%= user.department %></td>
        <td><%= user.proverb %></td>
        <td><%= user.issues.count %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Issues', user_issues_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

