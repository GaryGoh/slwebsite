<%= render "static_page/notice_flash" %>

<% if @current_user_stu.id == @user.id || @current_user_stu.admin %>


    <div class="panel panel-info">
      <!-- Default panel contents -->
      <div class="panel-heading"><h3><%= @user.name %> - 控制面板</h3>
      </div>
      <div class="panel-body">

        <ul class="nav nav-tabs" id="myTab">
          <li class="active"><a href="#admin_profile" data-toggle="tab">用户资料</a></li>
          <li><a href="#admin_news" data-toggle="tab">发布的新闻</a></li>
          <li><a href="#admin_activity" data-toggle="tab">发布的活动</a></li>
          <li><a href="#admin_timetable" data-toggle="tab">日程表</a></li>
          <li><a href="#admin_society" data-toggle="tab">社团资料</a></li>
          <!--<li><a href="#admin_comment" data-toggle="tab">新闻评论</a></li>-->
          <!--<li><a href="#global" data-toggle="tab">世界时事</a></li>-->
        </ul>

        <!-- Tab panes -->
        <div class="tab-content" id="adminnav">
          <div class="tab-pane fade in active" id="admin_profile">
            <%=
                render "module/user_admin/userprofile", :user => @user
            %>
          </div>

          <div class="tab-pane fade" id="admin_news">
            <%=
                render "module/user_admin/rendernews"
            %>
          </div>

          <div class="tab-pane fade" id="admin_activity">
            <%=
                render "module/user_admin/renderactivity"
            %>
          </div>

          <div class="tab-pane fade" id="admin_timetable">
            <div class="alert alert-warning">日程表功能未正式开放，此日程表为demo</div>
            <%=
                render "module/user_admin/timetable"
            %>
          </div>

          <div class="tab-pane fade" id="admin_society">
            <div class="alert alert-warning">所属社团资料板块未正式开放，此板块为demo</div>
            <%=
                render "module/user_admin/affiliateSociety", :user => @user
            %>
          </div>

          <div class="tab-pane fade" id="admin_comment">
            <%=
                #render "module/user_admin/rendernews"
            %>
          </div>

        </div>


      </div>

    </div>
    <!-- End of panel-->


    <td><%= link_to raw('<button type="button" class="btn btn-primary">更改信息</button>'), edit_user_path(@user) %></td>
    <td><%= link_to raw('<button type="button" class="btn btn-primary">发布新闻</button>'), new_user_issue_path(@user, @issue) %></td>
    <td><%= link_to raw('<button type="button" class="btn btn-primary">发布活动通知</button>'), new_user_noti_path(@user, @noti) %></td>
    <td><%= link_to raw('<button type="button" class="btn btn-primary">返回</button>'), root_path %></td
<% else %>
    <%= render "static_page/access_error", :notice => "用户错误" %>
<% end %>
</div>




