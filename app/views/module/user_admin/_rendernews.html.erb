<!--发布的新闻-->
<div class="panel panel-default">
  <div class="panel-heading">
    <h4 class="panel-title">
      发布的新闻
    </h4>
  </div>
  <div class="panel-body">
    <table class="table">
      <thead>
      <tr>
        <th>标题</th>
        <th>所属社团</th>
        <th>日期</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% for issue in @user.issues.reverse %>
          <tr>

            <td><%= link_to truncate(issue.title, :length => 20), shownews_url(issue) %></td>
            <% unless @user.societies.count <= 0 %>
                <td><%= link_to issue.society, societyshow_path(issue.society.id) %></td>
            <% end %>
            <td><%= issue.created_at.strftime("%d %b. %Y") %></td>
            <td><%= link_to '修改', edit_user_issue_path(@user, issue) %></td>
            <td><%= link_to '删除', [@user, issue], method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <!--</div>-->
  </div>
</div>
<!-- End of panel-->