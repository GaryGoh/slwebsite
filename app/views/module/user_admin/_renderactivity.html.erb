<!--发布的活动-->
<div class="panel panel-default">
  <div class="panel-heading">
    <h4 class="panel-title">
        发布的活动
    </h4>
  </div>
    <div class="panel-body">
      <table class="table">
        <thead>
        <tr>
          <th>标题</th>
          <th>所属社团</th>
          <th>日期</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
        </thead>

        <tbody>
        <% for noti in @user.notis.reverse %>
            <tr>

              <td><%= link_to truncate(noti.title, :length => 20), shownotis_url(noti) %></td>
              <td><%= link_to noti.society, societyshow_path(noti.society.id) %></td>
              <td><%= noti.created_at.strftime("%d %b. %Y") %></td>
              <td><%= link_to '修改', edit_user_noti_path(@user, noti) %></td>
              <td><%= link_to '删除', [@user, noti], method: :delete, data: {confirm: 'Are you sure?'} %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
</div>