<div class="row">
  <div class="col-md-8">
    <!--<img src="/assets/example/bg1.jpg" class="img-responsive">-->
    <h2><%= issue.title %></h2>

    <p><%= truncate(issue.content, :length => 350) %></p>
    <br><br>

    <p><a href=<%= shownews_url(issue) %>, class="btn btn-default" role="button">详细</a></p>


  </div>
  <div class="col col-sm-4">
    <% if (issue.issue_images.count != 0) %>
        <a href=<%= shownews_url(issue) %>>
          <%= image_tag issue.issue_images.order("RANDOM()").first.issue_pic.url(:thumb), :class => "img-responsive" %>
        </a>
    <% end %>
    <hr>
    <% if (issue.issue_images.count != 0) %>
        <a href=<%= shownews_url(issue) %>>
          <%= image_tag issue.issue_images.order("RANDOM()").last.issue_pic.url(:thumb), :class => "img-responsive" %>
        </a>
    <% end %>

    <div class="text-muted">
      <small><%= issue.created_at.strftime("%F") %></small>
    </div>
    <p>
      由<%= issue.author %>发表
    </p>
  </div>
</div>
<hr>