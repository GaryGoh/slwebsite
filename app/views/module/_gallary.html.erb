<title><%= issue.title %></title>

<style>

        /* Demo styles */
    html, body {
        margin: 0;
    }

    body {
        border-top: 4px solid #000;
    }

    .cred {
        margin-top: 20px;
        font-size: 11px;
    }

        /* This rule is read by Galleria to define the gallery height: */
    #galleria {
        width: 100%;
        height: 400px;
        background: white;
        responsive: true
    }

</style>
</head>
<!-- load jQuery -->
<!-- A bug here - it has to be loaded more than 3 times to make gallery run successfully -->
<% (1..4).each do |i| %>
    <%= javascript_include_tag 'googleajax.jquery' %>
    <%= javascript_include_tag 'galleria-1.3.3.min' %>
<% end %>


<!-- Adding gallery images. We use resized thumbnails here for better performance, but itâ€™s not necessary -->
<div id="galleria">
  <% issue.issue_images.each do |i| %>
      <%= image_tag i.issue_pic.url %>
  <% end %>
</div>
<script>

    // Load the classic theme
    Galleria.loadTheme('<%= javascript_path 'galleria.classic.min' %>');

    // Initialize Galleria
    Galleria.run('#galleria');
</script>
