<style>


    .iniTitle {
        clear: both;
        position: relative;
        margin-top: 20px;
        padding: 0 15px;

    }

    .iniTitle h2 {
        height: 54px;
        line-height: 54px;

    }

    .iniTitle #iniA {
        font-size: 12px;
        margin: 0 10px 0 10px;
        color: #f60;

    }

