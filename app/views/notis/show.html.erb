<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title" align="center"><%= @noti.title %></h2>
  </div>
  <div class="panel-heading">
    <h3 class="panel-title">发布时间：<%= @noti.created_at %></h3>
  </div>
  <div class="panel-body">
    <pre id="noti_pre"><%= "#{@noti.content}" %></pre>
  </div>
  <div class="panel-footer">修改时间：<%= @noti.updated_at %></div>
</div>
<td><%= link_to raw('<button type="button" class="btn btn-primary">返回</button>'), @user %></td>

<% if session[:user_id] == @noti.user.id && $user_admin %>
    <td><%= link_to raw('<button type="button" class="btn btn-primary">编辑</button>'), edit_user_noti_path(@user, @noti) %></td>

<% end %>




