<% if session[:user_id] == @user.id %>

    <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading"><h3>新闻列表</h3>
      </div>
      <div class="panel-body">


        <!-- Table -->
        <table class="table">
          <thead>
          <tr>
            <th>标题</th>
            <th>日期</th>
            <th>发布人</th>

            <th></th>
            <th></th>
            <th></th>
          </tr>
          </thead>

          <tbody>
          <% @issues.each do |issue| %>
              <tr>

                <td><%= issue.title %></td>
                <td><%= issue.date %></td>
                <td><%= issue.user.name %></td>

                <td><%= link_to '编辑', edit_user_issue_path(@user, issue) %></td>
                <td><%= link_to '删除', [@user, issue], method: :delete, data: {confirm: 'Are you sure?'} %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <td><%= link_to raw('<button type="button" class="btn btn-primary">返回</button>'), root_url %></td>

<% else %>
    <%= render "static_page/access_error" %>
<% end %>


