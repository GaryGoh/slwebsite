<% if (session[:user_id] == @user.id) || @user.id == nil %>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">编辑新闻</h3>
      </div>
      <div class="panel-body">
        <% if @issue.category_id == 3 %>
            <%= render "form" %>
        <% else %>
            <%= render "form" %>
        <% end %>

        <td><%= link_to raw('<button type="button" class="btn btn-primary">查看</button>'), [@user, @issue] %></td>

        <td><%= link_to raw('<button type="button" class="btn btn-primary">返回</button>'), @user %></td>
      </div>
    </div>


<% else %>
    <%= render "static_page/access_error" %>
<% end %>


