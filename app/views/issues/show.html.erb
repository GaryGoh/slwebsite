<% if session[:user_id] == @issue.user.id %>

    <p id="notice"><%= notice %></p>

    <p>
      <strong>Title:</strong>
      <%= @issue.title %>
    </p>

    <p>
      <strong>Content:</strong>
      <%= @issue.content %>
    </p>

    <p>
      <strong>Date:</strong>
      <%= @issue.date %>
    </p>

    <p>
      <strong>User:</strong>
      <%= @issue.user.name %>
    </p>

    <%= link_to 'Edit', edit_user_issue_path(@user, @issue) %> |
    <%= link_to 'Back', user_issues_path(@user) %>

<% else %>
    <%= render "static_page/access_error" %>
<% end %>